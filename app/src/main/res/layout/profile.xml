<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/color_light_orange"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray" />

    <LinearLayout
        android:id="@+id/homelinear_buttom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_home_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/usericon_whitecolor"
            android:textColor="@drawable/home_selector"
            android:textSize="@dimen/_20sdp"/>

        <TextView
            android:id="@+id/txthome_buttom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@drawable/home_selector"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
